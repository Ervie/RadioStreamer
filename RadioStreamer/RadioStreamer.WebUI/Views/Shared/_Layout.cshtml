<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Radio Streamer</title>
    <link rel="icon" type="image/x-icon" href="~/Images/waterStream.png">


    @System.Web.Optimization.Styles.Render("~/Content/css");
    @System.Web.Optimization.Styles.Render("~/Content/playerAdditional");

    @System.Web.Optimization.Scripts.Render("~/script/jquery");
    @System.Web.Optimization.Scripts.Render("~/script/modernizr");
    @System.Web.Optimization.Scripts.Render("~/script/bootstrap");
    @System.Web.Optimization.Scripts.Render("~/script/player");

</head>
<body background="~/Images/bg.jpg">
    <div class="navbar navbar-inverse navbar-fixed-top customNavbar">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/"><img border="0" class="myNavbarElement" alt="Radio Streamer" src="~/Images/waterStream.png" width="48" height="48" /></a>
            </div>
            <div class="navbar-collapse collapse customNavbar">
				<ul class="nav navbar-nav navbar-left">
					<li>@Html.ActionLink("O aplikacji", "About", "Home", new { area = "" }, new { @class = "myNavbarElement site-text nav-item" })</li>
                    @if (User.Identity.IsAuthenticated)
                    {
					    @Html.Partial("~/Views/Shared/channelsPartial.cshtml")
                    }
				</ul>                
                @Html.Partial("~/Views/Shared/loginPartial.cshtml")
            </div>
        </div>

    <div class="">
        <br />
        @RenderBody()
        <footer class="footer">
            <hr />
            <p class="site-text">&copy; @DateTime.Now.Year - Radio Streamer - Bartłomiej Buchała</p>
        </footer>
    </div>
</body>
</html>